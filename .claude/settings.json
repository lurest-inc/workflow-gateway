{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "cleanupPeriodDays": 30,
  "env": {
    "CLAUDE_AUTOCOMPACT_PCT_OVERRIDE": "80",
    "CLAUDE_CODE_ENABLE_PROMPT_SUGGESTION": "false",
    "CLAUDE_CODE_ENABLE_TELEMETRY": "false"
  },
  "attribution": {
    "commit": "Generated with Claude Code",
    "pr": "Generated with Claude Code"
  },
  "permissions": {
    "defaultMode": "default",
    "allow": [
      "Bash(cat:*)",
      "Bash(chmod:*)",
      "Bash(echo:*)",
      "Bash(gh api:*)",
      "Bash(gh issue comment:*)",
      "Bash(gh issue create:*)",
      "Bash(gh issue view:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh pr checkout:*)",
      "Bash(gh pr comment:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr edit:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr merge:*)",
      "Bash(gh pr view:*)",
      "Bash(gh release:*)",
      "Bash(gh repo list:*)",
      "Bash(gh run list:*)",
      "Bash(gh run view:*)",
      "Bash(gh workflow run:*)",
      "Bash(git add:*)",
      "Bash(git checkout:*)",
      "Bash(git commit:*)",
      "Bash(git fetch:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git rebase:*)",
      "Bash(git reset:*)",
      "Bash(git stash:*)",
      "Bash(ln:*)",
      "Bash(node -e:*)",
      "Bash(python3:*)",
      "WebFetch(domain:cli.github.com)",
      "WebFetch(domain:claude.com)",
      "WebFetch(domain:docs.github.com)",
      "WebFetch(domain:github.com)",
      "WebSearch",
      "mcp__ide__getDiagnostics",
      "mcp__o3__o3-search",
      "Bash(ls:*)",
      "Bash(grep:*)",
      "Bash(gh release view:*)",
      "Bash(gh label list:*)",
      "Bash(gh issue edit:*)",
      "Bash(gh label create:*)"
    ],
    "ask": [
      "Bash(git rm:*)",
      "Bash(mv:*)",
      "Bash(rm:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash scripts/actionlint-check.sh"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/merge-local-settings.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": []
      }
    ],
    "PreCompact": [
      {
        "hooks": []
      }
    ]
  },
  "enabledPlugins": {},
  "language": "japanese",
  "spinnerTipsEnabled": false,
  "alwaysThinkingEnabled": true,
  "terminalProgressBarEnabled": true
}
